{
    "name": "rampmaster/phptypist",
    "description": "The main typist service for generating PDFs from Markdown for ebooks.",
    "homepage": "https://phptypist.me",
    "authors": [
      {
        "name": "Roberto Moreno",
        "role": "Mantainer",
        "email": "rmorenp@gmail.com",
        "homepage": "https://rampmaster.dev"
      },
      {
        "name": "Others Contributors",
        "homepage": "https://github.com/rampmaster/phptypist.me/graphs/contributors"
      }
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-libxml": "*",
        "league/commonmark": "^2.4",
        "mpdf/mpdf": "^8.1",
        "spatie/commonmark-highlighter": "^3.0",
        "illuminate/support": "^10.12",
        "illuminate/collections": "^10.12",
        "symfony/config": "^6.0|^7.0",
        "symfony/event-dispatcher": "^6.0|^7.0",
        "symfony/filesystem": "^6.0|^7.0",
        "symfony/yaml": "^7.3",
        "symfony/finder": "^7.3"
    },
    "suggest": {
      "mpdf/mpdf": "^8.1"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.7",
        "slevomat/coding-standard": "^8.12",
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Rampmaster\\PHPTypistMe\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "phpcs": "phpcs -s",
        "phpstan": "phpstan",
        "test": "phpunit",
        "ci": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "phpcs": "Run PHP Code Sniffer",
        "phpstan": "Run PHPStan (with Larastan extension)",
        "test": "Run the PHPUnit tests",
        "ci": "Run all CI tests"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
      "branch-alias": {
        "dev-master": "1.x-dev"
      }
    }
}
